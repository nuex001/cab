<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%=title%></title>
    <link rel="stylesheet" href="../css/bookings.css" />
    <link rel="stylesheet" href="../fa/css/font-awesome.css" />
  </head>
  <body>
    <div class="container">
      <%-include("./includes/users/nav.ejs")%>
      <header>
        <a href="/users/add">Add</a>
        <a href="/users/book" class="active">Bookings</a>
      </header>
      <div class="child">
        <div class="no"><%=data.length%></div>
        <div class="box">
           <% if (data.length > 0){ %> 
            <% data.forEach(data=>{ %>
            <div class="row">
              <div class="text">
                <div class="innerbox">
                  <p><span>Name:</span><%=data.name%></p>
                  <p><span>email:</span><%=data.email%></p>
                  <p><span>time:</span><%=data.time%></p>
                </div>
                <div class="innerbox">
                  <p><span>Number:</span><%=data.number%></p>
                  <p><span>location:</span><%=data.from%> - <%=data.to%></p>
                  <p><span>date:</span><%=data.date%></p>
                </div>
              </div>
              <div class="btn" data-index="<%=data._id%>" data-id="<%=data.driver%>"><%=data.status%></div>
            </div>
            <% }) %>
            <% } %>
      
        </div>
      </div>
      <%-include("./includes/footer.ejs")%>
    </div>
  </body>
  <script src="../js/booking.js"></script>
</html>
